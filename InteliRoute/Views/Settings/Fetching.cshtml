@model InteliRoute.Models.ViewModels.FetchingVm
@{
    ViewData["Title"] = "Setup Fetching Mail";
}

<h4 class="mb-3">SETUP FETCHING MAIL</h4>
<p class="text-muted">Set your Gmail mailbox and choose how often to fetch. You’ll grant consent using your tenant’s credentials.json.</p>

@if (TempData["Msg"] is string msg)
{
     <div class="alert alert-info">@msg</div>
}

<div class="card mb-3">
    <div class="card-body">
        <form asp-action="AddMailbox" method="post" class="row g-3">
            <div class="col-lg-6">
                <label class="form-label">Enter your email</label>
                <input asp-for="NewAddress" class="form-control" placeholder="support@yourcompany.com" />
            </div>
            <div class="col-lg-3">
                <label class="form-label">Fetch frequency (seconds)</label>
                <input asp-for="NewPollIntervalSec" type="number" min="15" class="form-control" />
            </div>
            <div class="col-lg-3 d-flex align-items-end">
                <button type="submit" class="btn btn-dark w-100">Add Mailbox</button>
            </div>
        </form>
        <small class="text-muted">Provider: Gmail • Put credentials at <code>secrets/credentials/tenant-&lt;TenantId&gt;/credentials.json</code></small>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h6 class="mb-3">Fetch Control</h6>

        @if (Model.Mailboxes.Count == 0)
        {
            <div class="text-muted">No mailboxes configured.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Mode</th>
                            <th>Frequency</th>
                            <th>Last Sync (UTC)</th>
                            <th style="width:260px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in Model.Mailboxes)
                        {
                            <tr>
                                <td>@m.Address</td>
                                <td>@(m.IsActive ? Html.Raw("<span class=\"badge bg-success\">Active</span>") : Html.Raw("<span class=\"badge bg-secondary\">Disabled</span>"))</td>
                                <td>@m.FetchMode</td>
                                <td>@m.PollIntervalSec s</td>
                                <td>@(m.LastSyncUtc?.ToString("yyyy-MM-dd HH:mm") ?? "—")</td>
                                <td class="text-end">
                                    <form asp-action="ToggleActive" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@m.Id" />
                                        <button class="btn btn-outline-@(m.IsActive ? "danger" : "success") btn-sm">
                                            @(m.IsActive ? "Disable Fetching" : "Enable Fetching")
                                        </button>
                                    </form>

                                    <form asp-action="UpdateFrequency" method="post" class="d-inline ms-1">
                                        <input type="hidden" name="id" value="@m.Id" />
                                        <input type="number" name="pollSec" min="15" value="@m.PollIntervalSec" class="form-control form-control-sm d-inline" style="width:90px" />
                                        <button class="btn btn-outline-primary btn-sm ms-1">Save</button>
                                    </form>

                                    <form asp-action="ManualFetch" method="post" class="d-inline ms-1">
                                        <input type="hidden" name="id" value="@m.Id" />
                                        <button class="btn btn-outline-dark btn-sm">Manual Fetch Now</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
