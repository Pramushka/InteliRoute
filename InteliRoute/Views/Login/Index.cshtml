@model InteliRoute.Models.ViewModels.LoginVm
@{
    Layout = null; // no navbar on login
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login · InteliRoute</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background: #f5f7fb;
            min-height: 100vh;
            display: grid;
            place-items: center;
        }

        .login-card {
            width: 100%;
            max-width: 420px;
            border: 1px solid #e5e7eb;
            border-radius: 14px;
        }

        .brand {
            font-weight: 700;
            letter-spacing: .2px;
        }
    </style>
</head>
<body>
    <div class="card shadow-sm login-card">
        <div class="card-body p-4 p-md-5">
            <div class="mb-4 text-center">
                <div class="brand h4 mb-1">InteliRoute</div>
                <div class="text-muted small">Sign in to continue</div>
            </div>

            <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2" role="alert" style="display:@(ViewData.ModelState.ErrorCount>0?"block":"none")"></div>

            <form asp-action="Index" method="post" class="text-start">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ReturnUrl" />

                <div class="mb-3">
                    <label class="form-label">Username or Email</label>
                    <input class="form-control" asp-for="UsernameOrEmail" autocomplete="username" />
                    <span asp-validation-for="UsernameOrEmail" class="text-danger small"></span>
                </div>

                <div class="mb-2">
                    <label class="form-label">Password</label>
                    <input class="form-control" type="password" asp-for="Password" autocomplete="current-password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-check my-2">
                    <input class="form-check-input" asp-for="RememberMe" />
                    <label class="form-check-label" for="RememberMe">Remember me</label>
                </div>

                <button class="btn btn-dark w-100 mt-3" type="submit">Sign in</button>
            </form>

            <div class="text-center text-muted small mt-3">
                © @(DateTime.UtcNow.Year) InteliRoute
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
