@model InteliRoute.Models.ViewModels.LoginVm
<form asp-action="Index" method="post" class="text-start">
    <input type="hidden" asp-for="ReturnUrl" />
    <label>Username or Email</label>
    <input class="form-control" asp-for="UsernameOrEmail" />
    <label class="mt-2">Password</label>
    <input class="form-control" type="password" asp-for="Password" />
    <div class="form-check mt-2">
        <input class="form-check-input" asp-for="RememberMe" />
        <label class="form-check-label">Remember me</label>
    </div>
    <button class="btn btn-dark mt-3 w-100" type="submit">Login</button>
</form>
