{
  "ConnectionStrings": {
    "MySql": "Server=localhost;Port=3306;Database=ir_db;User Id=root;Password= ;SslMode=None;"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/inteliroute-.log",
          "rollingInterval": "Day",
          "shared": true
        }
      }
    ]
  },
  "Gmail": {
    "ApplicationName": "InteliRoute",
    "Scopes": [ "https://www.googleapis.com/auth/gmail.readonly" ],
    "CredentialsPathRoot": "secrets/credentials", // folder that contains per-tenant credentials.json
    "TokenStoreRoot": "secrets/tokens" // where OAuth token.json will be written
  },
  "AllowedHosts": "*"
}
